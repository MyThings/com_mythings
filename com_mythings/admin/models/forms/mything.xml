<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset>
		<field
			name="id"
			type="text"
			default="0" />
			
		<field
			name="title"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_TITLE_LABEL"
			description="COM_MYTHINGS_TITLE_DESC"
			size="100"
			required="true" />

		<field
			name="owner"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_OWNER_LABEL"
			description="COM_MYTHINGS_OWNER_DESC"
			size="40"
			required="true" />

		<field
			name="category"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_CAT_LABEL"
			description="COM_MYTHINGS_CAT_DESC"
			size="40"
			required="true" />
		
		<field
			name="state"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_STATE_LABEL"
			description="COM_MYTHINGS_STATE_DESC"
			size="20" />
			
		<field
			name="value"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_VALUE_LABEL"
			description="COM_MYTHINGS_VALUE_DESC"
			size="20" />
						
		<field
			name="weight"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_WEIGHT_LABEL"
			description="COM_MYTHINGS_WEIGHT_DESC"
			size="20" />
			
		<field
			name="description"
			type="textarea"
			class="inputbox"
			label="COM_MYTHINGS_TEXT_LABEL"
			description="COM_MYTHINGS_TEXT_DESC"
			rows="6"
			cols="100" />	
		
		<field
			name="lent"
			type="text" 
			label="COM_MYTHINGS_LENT_LABEL"
			description="COM_MYTHINGS_LENT_DESC"
			class="inputbox" 
			size="20" />

		<field
			name="lent_by"
			type="text"
			class="inputbox"
			label="COM_MYTHINGS_LENTBY_LABEL"
			description="COM_MYTHINGS_LENTBY_DESC"
			size="20" />
	</fieldset>
</form>